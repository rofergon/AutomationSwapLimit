{
  "name": "hedera-hardhat-project",
  "version": "1.0.0",
  "description": "Proyecto Hardhat configurado para Hedera Hashgraph",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:hedera": "hardhat test test/AutoSwapLimit.hedera.test.ts --network hederaTestnet",
    "test:execution": "hardhat test test/AutoSwapLimit.execution.test.ts --network hederaTestnet",
    "test:real-pool": "hardhat test test/AutoSwapLimit.real-pool.test.ts --network hederaTestnet",
    "create-order": "hardhat run scripts/create-limit-order.ts --network hederaTestnet",
    "create-fresh-order": "hardhat run scripts/create-fresh-order.ts --network hederaTestnet",
    "test-public-execution": "hardhat run scripts/create-fresh-order.ts --network hederaTestnet",
    "debug-swap": "hardhat run scripts/debug-swap-call.ts --network hederaTestnet",
    "associate-tokens": "hardhat run scripts/associate-tokens.ts --network hederaTestnet",
    "debug-orders": "hardhat run scripts/debug-orders.ts --network hederaTestnet",
    "deploy:testnet": "hardhat run scripts/deploy-hedera.ts --network hederaTestnet",
    "deploy:mainnet": "hardhat run scripts/deploy-hedera.ts --network hederaMainnet",
    "deploy:local": "hardhat run scripts/deploy-hedera.ts --network hederaLocal",
    "deploy:nativo": "hardhat run scripts/deploy-hedera-nativo.ts --network hederaTestnet",
    "interact:testnet": "hardhat run scripts/interact-hedera.ts --network hederaTestnet",
    "interact:mainnet": "hardhat run scripts/interact-hedera.ts --network hederaMainnet",
    "interact:local": "hardhat run scripts/interact-hedera.ts --network hederaLocal",
    "console:testnet": "hardhat console --network hederaTestnet",
    "console:mainnet": "hardhat console --network hederaMainnet",
    "console:local": "hardhat console --network hederaLocal",
    "verify:testnet": "hardhat verify --network hederaTestnet",
    "verify:mainnet": "hardhat verify --network hederaMainnet",
    "verify:auto": "hardhat run scripts/verify-contracts.ts --network hederaTestnet",
    "clean": "hardhat clean",
    "build": "npm run clean && npm run compile",
    "test:watch": "hardhat test --watch",
    "coverage": "hardhat coverage",
    "node:local": "hardhat node"
  },
  "keywords": ["hedera", "hardhat", "solidity", "blockchain", "smart-contracts"],
  "author": "Tu Nombre",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "@openzeppelin/contracts": "^5.1.0",
    "hardhat": "^2.26.1",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@hashgraph/sdk": "^2.69.0",
    "dotenv": "^17.2.1",
    "ethers": "^6.13.0"
  }
}