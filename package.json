{
  "name": "hedera-hardhat-project",
  "version": "1.0.0",
  "description": "Proyecto Hardhat configurado para Hedera Hashgraph",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:hedera": "hardhat test test/AutoSwapLimit.hedera.test.ts --network hederaTestnet",
    "test:execution": "hardhat test test/AutoSwapLimit.execution.test.ts --network hederaTestnet",
    "test:real-pool": "hardhat test test/AutoSwapLimit.real-pool.test.ts --network hederaTestnet",
    "test:swap-flow": "hardhat test test/AutoSwapLimit.swapFlow.test.ts --network hederaTestnet",
    "create-fresh-order": "hardhat run scripts/create-fresh-order.ts --network hederaTestnet",
    "test-public-execution": "hardhat run scripts/create-fresh-order.ts --network hederaTestnet",
    "associate-tokens": "hardhat run scripts/associate-tokens.ts --network hederaTestnet",
    "deploy:nativo": "hardhat run scripts/deploy-hedera-nativo.ts --network hederaTestnet",
    "test-token-association": "hardhat run scripts/test-token-association.ts --network hederaTestnet",
    "clean": "hardhat clean",
    "build": "npm run clean && npm run compile",
    "test:watch": "hardhat test --watch",
    "coverage": "hardhat coverage",
    "node:local": "hardhat node"
  },
  "keywords": [
    "hedera",
    "hardhat",
    "solidity",
    "blockchain",
    "smart-contracts"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "@openzeppelin/contracts": "^5.1.0",
    "@types/node": "^20.0.0",
    "axios": "^1.11.0",
    "form-data": "^4.0.4",
    "hardhat": "^2.26.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@hashgraph/sdk": "^2.69.0",
    "dotenv": "^17.2.1",
    "ethers": "^6.13.0"
  }
}
